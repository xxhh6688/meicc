<transition name="fade">
    <div v-if="competitions.show">
        <div class="page-space" style="margin:0 auto;">
            <div class="row">
                <div class="col-xs-3 col-md-4" style="padding:8px;margin-bottom:8px;" v-for="m in competitions.matches">
                    <div style="background-color:#ffffff;">
                        <div>
                            <a v-bind:href="'/#blade/competition?id='+m.Id">
                                <img v-bind:src="m.FullImage" style="width:100%;height:200px;" />
                            </a>
                        </div>
                        <div style="margin-top:16px;padding:16px;">
                            <div style="font-weight:bold;font-size:1.2rem;">{{m.Name}}</div>
                            <div style="margin-top:16px;height:100px;overflow:hidden">{{m.Description}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</transition>